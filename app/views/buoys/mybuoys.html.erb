<html>
  <head>
    <title> All of my buoys! </title>
    <meta name="description" content=" Checking out all of my buoys!">
    <meta charset="utf-8">
  </head>
  <body>
    <div class="container">

        <div class="row">
          <% @mybuoys.each do |buoy| %>
            <div class="mybuoy">
              <img src="<%= buoy.photo.url %>" alt="mybuoy">
              <div class="description">
                <h3><%= buoy.name %></h3>
                <p><%= buoy.color %></p>
                <p><%= buoy.size %></p>
                <p><%= buoy.category %></p>
                <p><%= buoy.address %></p>
                <p><%= buoy.description %></p>
                <p><%= buoy.price %> â‚¬</p>
              </div>
              <div class="buttons d-flex">
                <%= link_to "Update" , buoy_path(buoy), class: "btn btn-success margin-btn" %>
                <%= link_to "Delete" , buoy_path(buoy), method: :destroy, class: "btn btn-danger margin-btn" %>
              </div>
            </div>
          <% end %>
        </div>

    </div>

  </body>
</html>
