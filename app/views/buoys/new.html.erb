<div class="container">
  <div class="form-container-large">
    <h2 class="caption p-3">Please add all infos regarding the new buoy:  </h2>
      <%= simple_form_for @buoy do |f| %>
        <%= f.input :name %>
        <%= f.input :color %>
        <%= f.input :size, collection: Buoy::SIZE %>
        <%= f.input :category, collection: Buoy::CATEGORY %>
        <%= f.input :photo %>
        <%= f.input :price %>
        <%= f.input :address %>
        <%= f.input :description %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.submit "Let your buoy be booked!", class: "btn btn-success" %>
      <% end %>
  </div>
</div>
